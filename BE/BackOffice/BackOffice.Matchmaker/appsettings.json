{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "EndpointDefaults": {
      "Protocols": "Http2"
    }
  },
  "FakeActivity":{
    "IsEnabled": true,
    "PlayersConnectedPerMinute": 10000
  },
  "Kafka": {
    "Producer": {
      "MatchStatusMessage": {
        "BootstrapServers": "localhost:9100,localhost:9101,localhost:9102",
        "Acks": "All",
        "Topic": "match_status",
        "AllowAutoCreateTopics": false,
        "Partitioner": "ConsistentRandom"
      }
    },
    "Configuration": {
      "MatchStatus": {
        "BootstrapServers": "localhost:9100,localhost:9101,localhost:9102",
        "Name": "match_status",
        "NumPartitions": 6,
        "ReplicationFactor": 3,
        "Configs": {
          "min.insync.replicas": 2,
          "cleanup.policy": "delete",
          "retention.ms": 604800000,
          "segment.ms": 86400000,
          "unclean.leader.election.enable": false
        }
      }
    }
  }
}
